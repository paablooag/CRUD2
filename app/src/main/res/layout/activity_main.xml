<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondopantalla">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Animation.Design.BottomSheetDialog"
        app:cardBackgroundColor="@color/blacktransparente"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GYM\nBRO\nGENIUS"
        android:textColor="@color/amarilloOscuro"
        android:textSize="80dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
         />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/botonCrearEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/botonVerEjercicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/amarilloOscuro"
        android:text="Crear ejercicios"
        android:textColor="@color/black"
        android:onClick="CrearEjercicios"
        />
    <Button
        android:id="@+id/botonVerEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/amarilloOscuro"
        android:textColor="@color/black"
        android:text="Ver ejercicios"
        android:onClick="VerEjercicios"
        />

</androidx.constraintlayout.widget.ConstraintLayout>